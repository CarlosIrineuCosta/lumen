graph TB
    subgraph "Git Flow Strategy"
        MAIN[main branch<br/>Production ready]
        DEV[develop branch<br/>Integration branch]
        
        subgraph "Feature Branches"
            F1[feature/auth<br/>Authentication system]
            F2[feature/photo-upload<br/>File upload system]
            F3[feature/frontend-new<br/>React TypeScript UI]
            F4[feature/series-mgmt<br/>Photo series management]
        end
        
        subgraph "Release Process"
            REL[release/v1.0<br/>Release preparation]
            HOT[hotfix/security-patch<br/>Critical fixes]
        end
        
        %% Development Flow
        DEV --> F1
        DEV --> F2
        DEV --> F3
        DEV --> F4
        
        F1 --> DEV
        F2 --> DEV
        F3 --> DEV
        F4 --> DEV
        
        %% Release Flow
        DEV --> REL
        REL --> MAIN
        MAIN --> DEV
        
        %% Hotfix Flow
        MAIN --> HOT
        HOT --> MAIN
        HOT --> DEV
    end
    
    subgraph "Deployment Pipeline"
        MAIN --> PROD[Swiss VPS<br/>Production Server]
        DEV --> LOCAL[Local Development<br/>Testing Environment]
    end
    
    %% Styling
    classDef mainBranch fill:#ff6b6b
    classDef devBranch fill:#4ecdc4
    classDef feature fill:#45b7d1
    classDef release fill:#f9ca24
    classDef hotfix fill:#f0932b
    classDef deploy fill:#6c5ce7
    
    class MAIN mainBranch
    class DEV devBranch
    class F1,F2,F3,F4 feature
    class REL release
    class HOT hotfix
    class PROD,LOCAL deploy