{
  "mcpServers": {
    "zen": {
      "command": "sh",
      "args": [
        "-c",
        "cd ~/.zen-mcp-server && source .zen_venv/bin/activate && source .env && python -m server"
      ]
    },
    "serena": {
      "command": "/home/cdc/mcp-servers/serena-start.sh",
      "args": ["--context", "ide-assistant", "--project", "/home/cdc/Storage/NVMe/projects/wasenet"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@executeautomation/playwright-mcp-server"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/home/cdc/Storage/NVMe/projects/wasenet"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}